@model IEnumerable<Fitness.Models.group>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index Trainer</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New Group", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameGroup)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nameGroup)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idGroup }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idGroup }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idGroup })
                </td>
            </tr>
        }
    </table>

    <div>
        <p>
            @Html.ActionLink("List Frozen Client", "ListFrozenClient")
        </p>
    </div>

    <div>
        <p>
            @Html.ActionLink("Show Framed Subscription", "ShowFramedSubscription")
        </p>
    </div>
    
</body>
</html>
