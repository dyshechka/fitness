@model IEnumerable<Fitness.Models.group>

@{
    ViewBag.Title = "Главная страница (Тренер)";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Главная страница (Тренер)</title>
</head>
<body>
    <p>
        <a href="@Url.Action("Create", "Trainer")" title="Создать новую группу"><i class="fa fa-plus-square"></i> Создать новую группу</a>
    </p>
    <table  class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameGroup)
            </th>
            <th>Действия</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nameGroup)
                </td>
                <td class="actions">
                    <a href="@Url.Action("Edit", "Trainer", new { id = item.idGroup })" title="Изменить название группы"><i class="fa fa-pencil-square"></i></a>

                    <a href="@Url.Action("Details", "Trainer", new { id = item.idGroup })" title="Посмотреть подробнее"><i class="fa fa-bars"></i></a>

                    <a href="@Url.Action("Delete", "Trainer", new { id = item.idGroup })" title="Удалить группу"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        }
    </table>

    <div>
        <p>
            <a href="@Url.Action("ListFrozenClient", "Trainer")" title="Список замороженных клиентов"><i class="fa fa-minus-square"></i> Список замороженных клиентов</a>
        </p>
    </div>

    <div>
        <p>
            <a href="@Url.Action("ShowFramedSubscription", "Trainer")" title="Список оформленных абонементов"><i class="fa fa-list-alt"></i> Список оформленных абонементов</a>
        </p>
    </div>
    
</body>
</html>
