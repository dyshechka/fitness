@model IEnumerable<Fitness.Models.subscription>

@{
    ViewBag.Title = "Список оформленных абонементов";
}

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idTraining)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>Действия</th>
    </tr>

    @foreach (var item in Model)
    {
    
        @Html.HiddenFor(modelItem => item.idSubscription)

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfPurchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTraining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td class="actions">
                @*@Html.ActionLink("Support Subscription", "SupportSubscription", new { id = item.idSubscription }) |*@
                <a href="@Url.Action("SupportSubscription", "Trainer", new { id = item.idSubscription })" title="Подтвердить абонемент"><i class="fa fa-plus-square"></i></a>

                @*@Html.ActionLink("Discard Subscription", "Delete", "Client", new { id = item.idSubscription }, null)*@
                <a href="@Url.Action("Delete", "Client", new { id = item.idSubscription }, null)" title="Отклонить абонемент"><i class="fa fa-minus-square"></i></a>
            </td>
        </tr>
    }



</table>

<hr />
<div>
    @*@Html.ActionLink("Вернуться назад", "Index")*@
    <a href="@Url.Action("Index", "Trainer")" title="Вернуться назад"><i class="fa fa-arrow-left"></i>Вернуться назад</a>
</div>
