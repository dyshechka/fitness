@model Fitness.Models.group

@{
    ViewBag.Title = "Изменить название группы";
}

<!DOCTYPE html>

<html>
<head>
    <title>Изменить название группы</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            @Html.HiddenFor(model => model.idGroup)
            @Html.HiddenFor(model => model.idTraining)

            <div class="editor-label">
                @Html.LabelFor(model => model.nameGroup)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.nameGroup)
                @Html.ValidationMessageFor(model => model.nameGroup)
            </div>

            <p>
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </p>
        </fieldset>
    }

    <hr />
    <div>
        <a href="@Url.Action("Index", "Trainer")" title="Вернуться назад"><i class="fa fa-arrow-left"></i>Вернуться назад</a>
    </div>
</body>
</html>
