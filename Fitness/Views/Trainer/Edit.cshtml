@model Fitness.Models.group

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit Group</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>group</legend>

            @Html.HiddenFor(model => model.idGroup)
            @Html.HiddenFor(model => model.idTraining)
           
            <div class="editor-label">
                @Html.LabelFor(model => model.nameGroup)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.nameGroup)
                @Html.ValidationMessageFor(model => model.nameGroup)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
